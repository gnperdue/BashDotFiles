setupminiconda2() {
  # take anaconda out of the PATH...
  export PATH="${PATH/\/Users\/perdue\/anaconda\/bin:/}"
  # take miniconda3,2 out of the PATH...
  export PATH="${PATH/\/Users\/perdue\/miniconda3\/bin:/}"
  export PATH="${PATH/\/Users\/perdue\/miniconda2\/bin:/}"
  # add miniconda2 to PATH
  export PATH="/Users/perdue/miniconda2/bin:$PATH"
}
alias mnvpda2="setupminiconda2 && . activate py2mnv_pda"  # TF plus light support (HDF5, etc.)
alias mnvtrn2="setupminiconda2 && . activate py2mnv_trn"  # TF _only_
alias py2a="setupminiconda2 && . activate py2a"          # TF, etc. for use with atom (pyls)
alias py2b="setupminiconda2 && . activate py2b"          # "bare" Python 2 (lang server, ipython, jupyter)

setupminiconda3() {
  # take anaconda out of the PATH...
  export PATH="${PATH/\/Users\/perdue\/anaconda\/bin:/}"
  # take miniconda3,2 out of the PATH...
  export PATH="${PATH/\/Users\/perdue\/miniconda3\/bin:/}"
  export PATH="${PATH/\/Users\/perdue\/miniconda2\/bin:/}"
  # add miniconda3 to PATH
  export PATH="/Users/perdue/miniconda3/bin:$PATH"
}
alias mnvpda3="setupminiconda3 && . activate py3mnv_pda"       # TF plus light support (HDF5, etc.)
alias mnvtrn3="setupminiconda3 && . activate py3mnv_trn"       # TF _only_
alias py3a="setupminiconda3 && . activate py3a"                # TF, etc. for use with atom (pyls)
alias py3astro="setupminiconda3 && . activate py3astro"        # tf 1.12 and astropy
alias py3cirq="setupminiconda3 && . activate py3cirq"          # TF 1.12 and cirq stuff
alias py3cirq_dev="setupminiconda3 && . activate py3cirq_dev"  # TF 1.13.1 and cirq-dev stuff
alias py3dl="setupminiconda3 && . activate py3dl"              # General deep learning
alias py3fast="setupminiconda3 && . activate py3fast"          # PyTorch 1.0, fastai
alias py3goat="setupminiconda3 && . activate py3goat"          # TDD book
alias py3gym="setupminiconda3 && . activate py3gym"            # TF 1.8, OpenAI gym
alias py3mpnn="setupminiconda3 && . activate py3mpnn"          # stuff for MPNN with cheminformatics
alias py3pymc="setupminiconda3 && . activate py3pymc"          # PyMC3 stuff
alias py3qiskit="setupminiconda3 && . activate py3qiskit"      # torch and qiskit stuff
alias py3qubo="setupminiconda3 && . activate py3qubo"          # tf 1.11 and some dwave stuff
alias py3spin="setupminiconda3 && . activate py3spin"          # Open AI spinning up
alias py3tf112="setupminiconda3 && . activate py3tf112"        # TensorFlow 1.12
alias py3tf2="setupminiconda3 && . activate py3tf2"            # TF 2.0 preview
alias py3trch="setupminiconda3 && . activate py3trch"          # PyTorch, Py 3.7
alias py3util="setupminiconda3 && . activate py3util"          # Some Py3 stuff (changes)
alias py3xacc="setupminiconda3 && . activate py3xacc"          # XACC, pyquil, cirq, TF
alias py3tf2="setupminiconda3 && . activate py3tf2"            # TF 2.0 preview
alias py3tfgnt="setupminiconda3 && . activate py3tfgnt"        # TF 2.0-nightly w/ TF-Agents nightly
alias py3drlho="setupminiconda3 && . activate py3drlho"        # Deep RL Hands On env
alias py3dlgo="setupminiconda3 && . activate py3dlgo"          # Deep Learning & Game of Go
alias py36="setupminiconda3 && . activate py36"                # Very basic pip installs only
