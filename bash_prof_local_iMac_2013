
# This will move perl stuff to front...
source ~/perl5/perlbrew/etc/bashrc

# Haskell cabal
export PATH=$HOME/.cabal/bin:$PATH

# This will move /usr/local back to front to keep homebrew happy
export PATH="${PATH/\/usr\/local\/bin:/}"
export PATH=/usr/local/bin:$PATH

# This is for DocBook / AsciiDoc
export XML_CATALOG_FILES="/usr/local/etc/xml/catalog"

function ggrep() {
  grep -rI $1 * | grep -v svn | grep -v ROOT
}

function gwork () {
  export GENIEWORKDIR=$HOME/Software/GENIE
  echo "Setting working directory to $GENIEWORKDIR"
  cd $GENIEWORKDIR
  source environment_genie.sh
}

function gfname () {
  find . -name "*$1*" | grep -v svn | grep -v ROOT
}

