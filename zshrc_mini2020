# ~/.zshrc
autoload -Uz compinit
compinit -i

alias py3j="setupminiconda3 && conda activate py3j"
alias py3hf="setupminiconda3 && conda activate py3hf"
alias py3cirq="setupminiconda3 && conda activate py3cirq"
alias py3qec="setupminiconda3 && conda activate py3trch"

# set up claude code
export PATH="$HOME/.local/bin:$PATH"

# set up node js
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
